{
    "index_patterns": [
        "*index"
    ],
    "template": {
        "settings": {
            "number_of_shards": 1,
            "number_of_replicas": 1
        },
        "mappings": {
            "dynamic": false,
            "properties": {
                "term": {
                    "type": "keyword"
                },
                "entity": {
                    "type": "keyword"
                },
                "timestamp": {
                    "type": "long"
                }
            }
        }
    }
}
